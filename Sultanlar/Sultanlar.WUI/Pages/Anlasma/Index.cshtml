            });
            $('#dtpBitis').datetimepicker({
                locale: 'tr',
                format: 'L'
            });

            $('.validate-form input').each(function () {
                $(this).focus(function () {
                    hideValidate(this);
                });
            });

            BedellerGetir();
        });

