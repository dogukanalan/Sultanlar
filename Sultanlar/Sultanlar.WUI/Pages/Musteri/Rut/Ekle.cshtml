    <div class="pretty p-default p-curve prettyMargin3">
        <input class="chkbxs" type="radio" name="color" accesskey="3" />
        <div class="state p-primary-o">
            <label>3</label>
        </div>
    </div>
    <div class="pretty p-default p-curve prettyMargin3">
        <input class="chkbxs" type="radio" name="color" accesskey="4" />
        <div class="state p-primary-o">
            <label>4</label>
