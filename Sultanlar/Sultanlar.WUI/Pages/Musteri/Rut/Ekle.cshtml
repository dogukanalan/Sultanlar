    <div class="pretty p-default p-curve prettyMargin3">
        <input class="chkbxs" type="radio" name="color" accesskey="5" />
        <div class="state p-primary-o">
            <label>5</label>
        </div>
    </div>
    <div class="pretty p-default p-curve prettyMargin3">
        <input class="chkbxs" type="radio" name="color" accesskey="6" />
        <div class="state p-primary-o">
